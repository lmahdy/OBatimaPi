<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.ourbatima.controllers.ProfileCompletionController"
      spacing="15"
      style="-fx-padding: 30; -fx-background-color: #f8f9fa;"
      prefWidth="500"
      alignment="TOP_CENTER">

    <stylesheets>
        <URL value="@../../style/css/colors.css" />
        <URL value="@../../style/css/skeleton.css" />
        <URL value="@../../style/css/typographic.css" />
        <URL value="@../../style/css/register.css" />

    </stylesheets>

    <Label text="Compléter votre profil"
           styleClass="auth-title"
           style="-fx-font-size: 24px; -fx-padding: 0 0 15 0;"/>

    <!-- Informations non modifiables -->
    <VBox spacing="5">
        <Label text="Nom" styleClass="input-label"/>
        <TextField fx:id="txtNom" styleClass="input-modern" editable="false"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Prénom" styleClass="input-label"/>
        <TextField fx:id="txtPrenom" styleClass="input-modern" editable="false"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Email" styleClass="input-label"/>
        <TextField fx:id="txtEmail" styleClass="input-modern" editable="false"/>
    </VBox>

    <!-- Téléphone -->
    <VBox spacing="5">
        <Label text="Téléphone *" styleClass="input-label"/>
        <HBox spacing="10">
            <ComboBox fx:id="cbCountryCode" styleClass="country-combo" prefWidth="100">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="+216"/>
                        <String fx:value="00216"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="txtTelephone" promptText="XX XXX XXX" styleClass="input-modern" HBox.hgrow="ALWAYS"/>
        </HBox>
        <Label fx:id="telephoneError" styleClass="error-label"/>
    </VBox>

    <!-- Adresse -->
    <VBox spacing="5">
        <Label text="Adresse *" styleClass="input-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button styleClass="map-button" onAction="#handleMapClick">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                        <image>
                            <Image url="@../../../images/map.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <TextField fx:id="txtAdresse" promptText="Adresse complète" styleClass="input-modern"/>
        <Label fx:id="adresseError" styleClass="error-label"/>
    </VBox>

    <!-- Mot de passe -->
    <VBox spacing="5">
        <Label text="Nouveau mot de passe *" styleClass="input-label"/>
        <PasswordField fx:id="txtPassword"
                       promptText="8 caractères minimum, 1 majuscule, 1 chiffre"
                       styleClass="input-modern"/>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label styleClass="strength-weak" text="●"/>
            <Label styleClass="strength-medium" text="●"/>
            <Label styleClass="strength-strong" text="●"/>
        </HBox>
        <Label fx:id="passwordError" styleClass="error-label"/>
    </VBox>

    <!-- Boutons -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button text="Enregistrer"
                onAction="#onSave"
                styleClass="auth-button primary"
                defaultButton="true"/>
    </HBox>

</VBox>