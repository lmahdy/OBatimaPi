<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.OurBatima.controllers.ProfileCompletionController"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #f4f4f4;"
      prefWidth="400">

    <Label text="Compléter votre profil"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Champ Nom -->
    <TextField fx:id="txtNom"
               promptText="Nom"
               editable="false"
               style="-fx-background-color: #ffffff;"/>

    <!-- Champ Prénom -->
    <TextField fx:id="txtPrenom"
               promptText="Prénom"
               editable="false"
               style="-fx-background-color: #ffffff;"/>

    <!-- Champ Email -->
    <TextField fx:id="txtEmail"
               promptText="Email"
               editable="false"
               style="-fx-background-color: #e8e8e8;"/>

    <!-- Champ Téléphone -->
    <TextField fx:id="txtTelephone"
               promptText="Téléphone"
               style="-fx-background-color: #ffffff;"/>

    <!-- Champ Adresse -->
    <TextField fx:id="txtAdresse"
               promptText="Adresse"
               style="-fx-background-color: #ffffff;"/>

    <!-- Mot de passe -->
    <PasswordField fx:id="txtPassword"
                   promptText="Nouveau mot de passe (8 caractères minimum)"
                   style="-fx-background-color: #ffffff;"/>

    <!-- Boutons -->
    <HBox spacing="10"
          alignment="CENTER_RIGHT"
          style="-fx-padding: 20 0 0 0;">



        <Button text="Enregistrer"
                onAction="#onSave"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

</VBox>