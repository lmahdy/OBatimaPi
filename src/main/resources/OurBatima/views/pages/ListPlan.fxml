<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/18.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.ourbatima.controllers.ListPlan">
    <children>
        <ScrollPane layoutX="30.0" layoutY="50.0" prefHeight="400.0" prefWidth="540.0">
            <content>
                <TilePane fx:id="tilePanePlans"
                          prefTileWidth="250"
                          prefTileHeight="120"
                          hgap="10"
                          vgap="10"
                          maxWidth="1.7976931348623157E308"/>
            </content>
        </ScrollPane>

        <HBox layoutX="30.0" layoutY="460.0" spacing="20">
            <children>
                <Button text="Refresh List" onAction="#refreshList"/>
                <Button text="Add a Plannification" onAction="#gotoplanifs"/>
                <Button text="SEE chat" onAction="#gotochat"/>
                <Button onAction="#gotoDashboard" text="Dashboard"/>
                <Button onAction="#gotoWeather" text="Weather"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
